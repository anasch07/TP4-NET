@{
    @model IEnumerable<Student>

}


@{
    if (Model.Count() <= 0)
    {
        <h2 class="alert alert-warning">There is no Student studying this course please verify your infos </h2>
    }
    else

    {
        <h1>@ViewBag.Id</h1>
        <div style="
    width: 100%;
    display: grid;
    justify-content: start;
    align-items:center;
    font-size: 2ch;
    font-weight: bold;
    
">
            <ul>
            @foreach(Student s in Model){
              <li>
                  <span style="padding: 1vw;">@s.first_name s.last_name</span>
                  <span style="padding: 1vw;">@s.university</span>
                    <span style="padding: 1vw;">@s.phone_number</span>
                    </li>
                }
           
            
            </ul>

        </div>
    }


}


